{
  "manifest_version": 2,
  "name": "Stargazer Wallet",
  "version": "1.3.1",

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Extension wallet for $DAG tokens.",
  "homepage_url": "https://constellationnetwork.io/",
  "short_name": "stargazer-wallet-ext",

  "permissions": [
    "https://www.stargazer.network/",
    "https://*.coingecko.com/",
    "https://*.constellationnetwork.io/",
    "http://*.constellationnetwork.io:9000/",
    "chrome://favicon/"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;",

  "__chrome|firefox__author": "Stardust Collective",
  "__opera__developer": {
    "name": "devneser"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "app.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Stargazer",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": ["js/background.bundle.js"],
    "__chrome|opera__persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/contentScript.bundle.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
